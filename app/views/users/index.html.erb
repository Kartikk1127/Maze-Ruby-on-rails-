<% flash.each do |name,msg| %>
  <div class="alert alert-<%= name %>"><%= msg %></div>
<% end %>
<div class="boundary container">
<div class="headCont">
  <h1 style="font-family:Inria Sans;"><%= link_to image_tag("Vector1.png"), articles_path %> <%= link_to image_tag("Maze.png"), articles_path %></h1>
  <div class="usermanage"><%= image_tag("User Management.png") %></div>

</div>
<!--  <div class="sidenav">-->
    <div class="feed">
      <button type="button" class="btn btn-outline-primary"><%= image_tag("feed.png") %><%= link_to "Feed", articles_path %></button>
    </div>

    <br>

    <div class="profile">
      <button type="button" class="btn btn-outline-primary"><%= image_tag("profile.png") %><%= link_to "Profile", edit_user_registration_path %></button>
    </div>

    <br>


    <div class="manage">
      <button type="button" class="btn btn-outline-primary"><%= image_tag("profile.png") %><%= link_to "Manage User", users_path %></button>
    </div>
  <br>

  <div class="report">
    <button type="button" class="btn btn-outline-primary"><%= image_tag("report.png") %><%= link_to "Reports" %></button>
  </div>

    <br>

    <div class="logout">
      <button type="button" class="btn btn-outline-primary"><%= image_tag("logarrow.png") %><%= link_to "Logout", destroy_user_session_path,  data: {"turbo-method": :delete} %></button>
    </div>





  <div class="usermain"><div class="listofusers"><%= image_tag("List of Users.png") %>
    <div class="createroles"><%= link_to "Create role", user_new_path(@users) ,class:"btn btn-primary" %></div>
    <br>
    <br>
<!--    <div class="usermain">-->
      <% @users.each do |user| %>
        <div class="userindexlist">
          <div class="iconwithname"><%= image_tag("mazesmall.png") %><%= user.first_name %></div>
<!--          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-->
          <div class="userphone"><%= user.phone %></div>
<!--          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-->
          <div class="useremail"><%= user.email %></div>
<!--          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-->
          <%#= user.access_locked? %>

          <!--                  <strong>access locked?</strong>-->
          <% if user.access_locked? %>
            <div class="activebutton"><%= button_to "Activate", ban_user_path(user), method: :patch  %></div>
            <% else %>
            <div class="deactive"><%= button_to "Deactivate", ban_user_path(user), method: :patch %></div>

          <% end %>



          <br>
        </div>
          <br>
          <br>
<!--      <div class="export"><%#= button_to "Export", user_export_path(user), method: :get  %></div>-->
<% end %>
    </div>
